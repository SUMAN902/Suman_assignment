<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/Recritue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="71dp"
        android:layout_marginLeft="71dp"
        android:contentDescription="@string/Recuriter_button"
        android:text="@string/Recuriter_button"
        app:layout_constraintBaseline_toBaselineOf="@+id/Recritue2"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/Recritue2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="96dp"
        android:contentDescription="@string/Recuriter2_button"
        android:text="@string/Recuriter2_button"
        app:layout_constraintStart_toEndOf="@+id/Recritue"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/user_dice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginLeft="9dp"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:contentDescription="@string/user_dice"
        app:layout_constraintEnd_toStartOf="@+id/computer_dice"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/computer_dice"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/computer_dice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="268dp"
        android:contentDescription="@string/comp_dice"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/user_dice"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/Result"
        android:layout_width="178dp"
        android:layout_height="29dp"
        android:layout_marginBottom="124dp"
        android:contentDescription="@string/Result"
        android:text="@string/blank_strg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>